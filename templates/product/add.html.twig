{% extends 'base.html.twig' %}

{% block title %}Add Product{% endblock %}

{% block body %}
    {{ form_start(productForm) }}
        <div class="justify-content-center  align-items-center">
            <div class="form-group">
                <h4 class="text-center mb-4">Add Product</h4>
            </div>
            <div class="form-group mb-3">
                {{ form_row(productForm.label, {"attr":{"class" : "form-control", "placeholder" : "Product label"} }) }}
            </div>
            <div class="form-group mb-3">
                {{ form_row(productForm.stock, {"attr":{"class" : "form-control", "placeholder" : "Stock"} }) }}
            </div>
            <div class="form-group mb-3 row mx-auto">
                
                <input type="submit" class="form-control btn btn-outline-primary col" value="Add Product">
            </div>
        </div>
    {{ form_end(productForm) }}
{% endblock %}
